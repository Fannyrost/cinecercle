<div class="personnalized-container text-center">

  <div class="d-flex justify-content-start my-5">
    <div class="d-flex align-items-start flex-grow">
      <%= render_breadcrumbs %>
    </div>
  </div>
  <h1 class="my-5">Ajouter un film dans le cercle <%= @circle.title %></h1>
  <form action="/" id="movie-search" class="my-5" >  <!-- method="get" -->
