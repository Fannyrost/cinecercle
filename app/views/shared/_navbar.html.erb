<% if user_signed_in? %>
  <div class="logged-navbar d-flex justify-content-between p-4 align-items-center">
    <div><h1><%= link_to 'Cinécercle', root_path  %></h1></div>
    <div class="d-flex justify-content-between align-items-center nav-links">
      <h2><%= link_to "Mes cercles", circles_path  %></h2>
      <h2><%= link_to "Hello, #{current_user.pseudo.capitalize} !", user_path(current_user)  %></h2>
    </div>
  </div>
<% else %>
  <div class="unlogged-navbar d-flex justify-content-between p-4 align-items-center">
    <div><h1><%= link_to 'Cinécercle', root_path  %></h1></div>
    <div><h2><%= link_to 'Login',  new_user_session_path  %></h2></div>
  </div>
<% end %>
