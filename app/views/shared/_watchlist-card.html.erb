<% @circle = reco.membership.circle %>
<%= link_to circle_recommendation_path(@circle, reco) do  %>
  <div class="d-flex justify-content-between watchlist-card">
    <%= image_tag  movie.poster  %>
    <div class="flex-grow p-3">
      <div class="d-flex justify-content-between align-items-start ">
        <div class="flex-grow"><h3><%= movie.title %></h3></div>
        <div class="d-flex flex-column align-items-center">
          <p class="watchlist-content">Recommand√© par <%= reco.membership.user.pseudo %></p>
          <%= render 'shared/stars', reco: reco %>
        </div>
      </div>
      <div>
        <p class="text-left"><%= movie.plot %></p>
      </div>
    </div>
  </div>
<% end %>

