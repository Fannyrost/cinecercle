<%= link_to circle_recommendation_path(@circle, reco) do  %>

  <div class="movie-card m-4 d-flex flex-column justify-content-between">
    <div class=" movie-img">
      <%= image_tag movie.poster, alt: "alttext" %>
    </div>
    <div class="movie-card-content p-3">
      <div class="d-flex justify-content-between">
        <h2 class="mr-2"><%= movie.title %></h2>
        <%= render 'shared/stars', number: reco.rating %>
      </div>

      <div class="d-flex justify-content-start align-items-center mt-2">
        <%= render 'shared/avatar-small', user: membership.user %>

        <div class="d-flex flex-column justify-content-between align-items-start ml-3">
          <p style="font-size: 12px;"><em> <%= reco.time_ago(reco.created_at) %></em></p>
          <p> Ajout√© par <%= membership.user.pseudo.capitalize%> </p>
        </div>

      </div>
    </div>
  </div>

<% end %>

