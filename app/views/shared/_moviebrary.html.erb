<h2 class="my-4">Moviebrary</h2>
<div class="tabs d-flex justify-content-start align-items-end">
  <div class="watchlist-tab  tab active">
    <a href="#">Watchlist</a>
  </div>
  <div class="reco-tab tab">
    <a href="#">Recommandations</a>
  </div>
  <div class="movies-seen-tab tab ">
    <a href="#">Films vus</a>
  </div>
</div>
<div class="moviebrary">
  <div class="d-flex flex-column align-items-center justify-content-center tab-content watchlist-tab on">
    <% if user.watchlists.size == 0 %>
      <p>Nothing added yet !</p>
    <% end %>
    <% user.watchlists.each do |watchlist| %>
      <%= render 'shared/watchlist-card', movie: watchlist.recommendation.movie, reco: watchlist.recommendation  %>
    <% end %>
  </div>
  <div class="d-flex flex-column align-items-center justify-content-center tab-content reco-tab">
    <% user.memberships.each do |membership| %>
      <% membership.reviews.each do |review| %>
        <%= render 'shared/watchlist-card', reco: review.recommendation, movie: review.recommendation.movie  %>
      <% end %>
   <% end %>
  </div>
  <div class="d-flex flex-column align-items-center justify-content-center tab-content movies-seen-tab">
    <% if user.memberships.size == 0 %>
      <p>Nothing added yet !</p>
    <% end %>
     <% user.memberships.each do |membership| %>
       <% membership.recommendations.each do |reco| %>
         <%= render 'shared/recommendations-card', membership: membership, reco: reco, movie: reco.movie  %>
       <% end %>
    <% end %>
  </div>

</div>
