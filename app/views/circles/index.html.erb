<%= render 'shared/logged-navbar' %>

<div class="personnalized-container text-center ">
  <div class="d-flex justify-content-end my-5">
    <div class="btn-underline-hover my-2 d-flex justify-content-start" id="add-reco">
        <div><i class="fas fa-plus"></i></div>
        <div class="btn-underline ml-2"><p>Créer un nouveau cercle</p></div>
    </div>  </div>
  <h1 class="my-5">Tous mes cercles</h1>
  <div class="d-flex justify-content-around flex-wrap">
    <% @circles.each do |c| %>
      <%= render 'shared/circle-card', c: c %>
    <% end %>
  </div>


  <div class="circle-form hidden" id="reco-form">
    <%= simple_form_for [ @circle] do |f| %>
      <%= f.input :title,
                  required: true,
                  autofocus: true,
                  placeholder: "Titre du Cercle",
                  input_html: { class: 'form-field' },
                  label:false %>
      <%= f.input :description,
                  required: true,
                  autofocus: true,
                  input_html: { class: 'form-field' },
                  placeholder: "Description",
                  label:false %>
      <div class="form-actions">
        <%= f.button :submit, "Créer", class: 'btn-pinky' %>
      </div>
    <% end %>

  </div>


  </div>
</div>

